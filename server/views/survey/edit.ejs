<!-- edit view -->

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1 class id="font"><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField" class id ="font2">Survey Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter survey name"
                    name="name" 
                    value="<%= survey.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="numberTextField" class id ="font2">Author Name</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter first and last name"
                    name="displayName" 
                    value="<%= survey.displayName%>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField" class id ="font2">Active Till</label>
                    <input type="date" class="form-control"
                    id="endDate"
                    placeholder="Enter the end date of survey" value="<%= survey.formattedDate %>" min="2021-07-31"
                    name="endDate" required>
                </div>   
             
                <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/survey-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


